            <label style="display:inline-block;margin-right:8px;cursor:pointer;">
                <input onfocusout="saveanswer('Opgave 1c svar', 'AnswerBox6')" type="radio" id="AnswerBox6" name="Answer1c" value="incorrect" style="display:none;" />
                <img src="~/Img/Opgave1/Drawing.png" alt="Option 2" style="width:150px;height:150px;border:2px solid transparent;object-fit:contain;" onclick="selectImage('AnswerBox6', this)" />
            </label>
            <label style="display:inline-block;cursor:pointer;">
                <input onfocusout="saveanswer('Opgave 1c svar', 'AnswerBox7')" type="radio" id="AnswerBox7" name="Answer1c" value="correct" style="display:none;" />
                <img src="~/Img/Opgave1/Markeret.png" alt="Option 3" style="width:150px;height:150px;border:2px solid transparent;object-fit:contain;" onclick="selectImage('AnswerBox7', this)" />
