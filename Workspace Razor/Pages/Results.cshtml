@page
@model ResultsModel
@{
    ViewData["Title"] = "Results page";
}
    <div class="resultBlock">
            <p id="displaystorage"></p>
        </div>
        <div class="CheckAnswers">
            <p id="displayanswer"> </p>
        </div>



<script>
// Call allStorage and checkAnswers when the window finishes loading so the DOM elements exist.
window.addEventListener('load', () => {
    allStorage();
    // Run the answers check automatically
    if (typeof checkAnswers === 'function') {
        checkAnswers();
    }
});
</script>
