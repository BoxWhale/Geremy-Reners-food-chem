<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Workspace_MVC</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
    <div class="wrapper main-wrapper">
        <!-- Navbar content -->
        <div class="navbar main-navbar">
            <!-- Left-aligned section "For logo"-->
            <div class="navbar-left">
                <a asp-page="/Index" class="nav-link">
                    <img src="https://www.emu.dk/themes/custom/emu/EMU_Logo_dark.svg" alt="Home" style="width: 128px"/>
                </a>
            </div>
            <!-- Center-aligned section "For navigation links"-->
            <div class="navbar-center">
                <a asp-page="/Index" class="nav-link">Home</a>
            </div>
            <!-- Right-aligned section "For login/signup links"-->
            <div class="navbar-right">
            <!-- Future login/signup links can be added here 
                    Spacer for now-->
            </div>
        </div>
    </div>
    </header>
    
    <main role="main" class="wrapper">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
